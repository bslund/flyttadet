<?xml version="1.0" encoding="UTF-8"?>
<template-definition version="1.0" xmlns="http://www.polopoly.com/polopoly/cm/app/xml">
  <input-template name="p.siteengine.SiteUserData" label="cm.template.p.siteengine.SiteUserData">
    <policy>se.moveit.membership.SiteUserDataPolicy</policy>
    <editor>com.polopoly.cm.app.widget.OTopPolicyWidget</editor>
    <viewer>com.polopoly.cm.app.widget.OTopPolicyWidget</viewer>
    <type>Content</type>
    <param name="ViewState_refresh">true</param>
    <field name="name" input-template="p.ContentName" label="cm.label.Title" 
    />
    <field name="screenName" input-template="p.TextInput" label="Full name" />
    <field name="email" input-template="p.TextInput" label="Email" />
    <!--field input-template="p.TextInput" name="fullName" label="Name" /-->
    <field name="tenderList" input-template="p.ContentListEntryContainer" label="Tender list">
        <param name="contentListName">tenderList</param>
    </field>
  </input-template>
</template-definition>
